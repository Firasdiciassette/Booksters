<!-- src/views/login.ejs -->
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../css/login-style.css">
    <link rel="stylesheet" type="text/css" href="../css/form-validation-style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Gothic&display=swap" rel="stylesheet">
    <title>Login | Booksters</title>
</head>
<body>
    <div class="login-box">
        <div class="image-box">
            <img src="/images/login-bookshelf.jpg" alt="Scaffali di libri e scale">
        </div>
        <div class="inner-login-box"> 
            <h1>Sign-in</h1>
            <% if (error_msg) { %>
                <div class="flash-error"><%= error_msg %></div>
            <% } %>
              
            <% if (error && error.length > 0) { %>
            <div class="flash-error"><%= error %></div>
            <% } %>
            
            <% if (success_msg && success_msg.length > 0) { %>
            <div class="flash-success"><%= success_msg %></div>
            <% } %>
            <form id="login-form" action="/login" method="POST">
                <ul>
                    <li>
                        <label for="username">Enter Your Username</label>
                        <div class="input-control">
                            <input type="text" id="username" name="username" size="30">
                            <div class="error"></div>
                        </div>
                    </li>
                    <li>
                        <label for="password">Enter Your Password</label>
                        <div class="input-control">
                            <input type="password" id="password" name="password" size="30">
                            <div class="error"></div>
                        </div>
                        <button type="submit">Login</button> 
                        <p>Don't have an account? <a href="/register">Sign-up</a></p>  
                    </li>
                </ul>
            </form>
        </div>
    </div>
    <script src="/javascripts/form-validation.js" defer></script>
</body>
</html>
