    <!DOCTYPE html>
    <html lang="en-US">
    <head>
      <meta charset="utf-8">
      <meta name="author" content="Firas Tabai"> 
      <meta name="description" content="Booksters is a free, ad-less, instant e-library where you can discover, share, and review countless books."> 
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/css/style.css">
      <title>Booksters | Your Planet of Books</title>
    </head>
    <body>

      <div class="nav-items">
        <img src="/images/BOOKSTERS.png" alt="Booksters Logo">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="#About">About</a></li>
        </ul>
        <input type="text" id="search-title" placeholder="Search by title">
        
        <% if (user) { %>
          <p>Welcome, <%= user.username %>!</p>
          <% if (user.role === 'admin') { %>
            <a href="/profile">Admin Dashboard</a>
          <% } else { %>
            <a href="/profile">My Library</a>
          <% } %>
          <a href="/logout">Logout</a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/register">Register</a>
        <% } %>
      </div>

      <!-- flash Messages -->
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="flash-success"><%= success_msg %></div>
      <% } %>
      <% if (error_msg && error_msg.length > 0) { %>
        <div class="flash-error"><%= error_msg %></div>
      <% } %>
      <% if (error) { %>
        <div class="flash-error"><%= error %></div>
      <% } %>

      <div id="search-results"></div>

      <div class="home-image"> 
        <img src="/images/home-bg.jpg" alt="Bookshelves background"> 
        <h1>Welcome to Booksters</h1>
        <h3>Your pocket library</h3>
      </div>
    <!-- Books of the month vetrina -->
      <div class="vetrina">
        <h2>Books of the Month</h2>
          <div class="book-grid">
            <% botM.forEach(book => { %>
              <div class="book-card">
                <h3><%= book.title %></h3>
                <p><strong>Author:</strong> <%= book.author %></p>
                <p><strong>Genre:</strong> <%= book.genre %></p>
                <p><%= book.description %></p>
                <img src="<%= book.cover_url || '/images/default-cover.png' %>" alt="Cover of <%= book.title %>" 
                    class="book-cover">
             
                <form action="/library/add" method="post">
                  <input type="hidden" name="bookId" value="<%= book.id %>">
                  <button type="submit">Want to read</button>
                </form>
                
                <% if (user && user.role === 'admin') { %>
                  <form action="/books/delete" method="POST">
                    <input type="hidden" name="bookId" value="<%= book.id %>">
                    <button type="submit">Remove book</button>
                  </form>
                <% } %>
              </div>
          <% }) %>      
          </div>
      </div>
      
      <!-- Footer -->
      <footer>
        <div class="footer-company-info">
          <p>Contact us: <a href="mailto:info@booksters.com">info@booksters.com</a></p>
        </div>
        <div class="footer-nav">
          <ul>
            <li><a href="#Home">Home</a></li>
            <li><a href="#MyLibrary">My Library</a></li>
            <li><a href="#About">About</a></li>
          </ul>
        </div>
        <div class="footer-social">
          <a href="https://www.facebook.com">Facebook</a>
          <a href="https://www.x.com">X</a>
          <a href="https://www.linkedin.com">LinkedIn</a>
        </div>
        <div class="footer-newsletter">
          <h5>Subscribe to our newsletter:</h5>
          <form action="/subscribe" method="post">
            <input type="email" name="email" placeholder="Enter your email">
            <button type="submit">Subscribe</button>
          </form>
        </div>
      </footer>
      <script src="/javascripts/search-books.js"></script>
    </body>
    </html>
