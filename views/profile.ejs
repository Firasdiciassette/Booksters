<!DOCTYPE html>
<html lang="en-US">
    <body>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
        <title>Booksters | Because We Are Book Lovers</title>
    </head>
    <div class="nav-items">
      <img src="/images/BOOKSTERS.png" alt="Booksters Logo">  
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="#About">About</a></li>
        </ul>
        <!-- Not available in user profile <input type="text" id="searchbar" placeholder="Search..."> -->
        <% if (user) { %>
            <p><%= user.username %></p>
            <% if (user.role === 'admin') { %>
              <a href="/profile">Admin Dashboard</a>
            <% } else { %>
              <a href="/profile">My Library</a>
            <% } %>
            <a href="/logout">Logout</a>
          <% } else { %>
            <a href="/login">Login</a>
            <a href="/register">Register</a>
            <% } %>
    </div>
          <% if (success_msg) { %>
            <div class="flash-success"><%= success_msg %></div>
          <% } %>
          <% if (error_msg) { %>
            <div class="flash-error"><%= error_msg %></div>
          <% } %>
    <!-- Adding book -->
    <div class = "search-box">
    <form action="/books/add" method="POST">
        <fieldset>
            <legend>Add a New Book</legend>
            <input type="text" name="title" placeholder="Book title" required>
            <input type="text" name="author" placeholder="Book author" required>
            <input type="text" name="genre" placeholder="Book genre">
            <textarea name="description" placeholder="Add a short description"></textarea>
            <button type="submit">Add Book</button>
          </fieldset>
    </form>
    </div>

    <!-- Books List -->
    <div class="book-grid">
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
            <div class="book-card">
                <h3><%= book.title %></h3>
                <p><strong>Author:</strong> <%= book.author %></p>
                <p><strong>Genre:</strong> <%= book.genre %></p>
                <p><%= book.description %></p>
                <img src="<%= book.cover_url || '/images/default-cover.png' %>" alt="Cover of <%= book.title %>" class="book-cover">
            </div>
        <% }) %>
    <% } else { %>
        <p>No books added to your library yet.</p>
    <% } %>
        
    </div>
    </body>
</html>